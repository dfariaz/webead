@model WebEAD.Areas.Extranet.Models.ForumMetadado

@{
    Layout = null;
    if (Model.ftpc_st_id == 1) { Model.ftpc_status = true; } else { Model.ftpc_status = false; }
}

<div class="sixteen wide column bordaEDIT">
    <div class="ui grid specialIDP">
        <div class="sixteen wide blue text column centered">
            <h1 class="">Editar Tópico (ID: @Model.ftpc_id) </h1>
        </div>
    </div>
    <div class="ui grid">
        <div class="fourteen wide column centered">
            <h5>Data Cadastro: @Model.ftpc_datacadastro.ToShortDateString()</h5>
            <div class="content">
                <form id="formTE" name="formTE" method="post" class="ui fluid form">
                    <input type="hidden" value="@Model.ftpc_id" id="ftpc_id" name="ftpc_id" />
                    <input type="hidden" value="@ViewBag.IDD" id="DISC" name="DISC" />
                    <div class="field">
                        <div class="ui left icon input">
                            @Html.TextAreaFor(model => model.ftpc_descricao, new { placeholder = "Descrição" })
                            <div class="ui blue basic label" id="descricao">
                                <span class="validaTD"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <div class="ui checkbox">
                                @Html.CheckBoxFor(model => model.ftpc_status)
                                <label>Ativo?</label>
                            </div>
                            <div class="ui blue basic label" id="status">
                                <span class="validaTS"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            @Html.Action("SubjectDropdownList")
                            <div class="ui blue basic label" id="disciplinas">
                                <span class="validaTDD"></span>
                            </div>
                        </div>
                    </div>
                    <div class="actions">
                        <a id="voltar" class="ui black deny left labeled icon button" href="@Url.Action("Topics", "Forum")">
                            Voltar
                            <i class="backward icon"></i>
                        </a>
                        <a id="btnSave" class="ui positive ok right labeled icon button">
                            Salvar
                            <i class="save icon"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>