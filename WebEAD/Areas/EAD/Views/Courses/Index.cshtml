@model IEnumerable<WebEAD.Areas.EAD.Models.NoticeMetadado>

@{
    ViewBag.Title = "Avisos";
    Layout = "~/Areas/EAD/Views/Shared/_LayoutDisciplinas.cshtml";
}

<div class="ui grid ">
    <div class="sixteen wide blue text column centered">
        <h1 class="">Avisos</h1>
    </div>
</div>
<div class="ui grid ">
    <div class="sixteen wide column">
        @foreach (var item in Model)
        {
            <div class="ui grid">
                <div class="sixteen wide column">
                    <h3>@Html.DisplayFor(modelItem => item.av_titulo)</h3>
                </div>
            </div>
            <div class="ui grid">
                <div class="sixteen wide column mensagem">
                    <p>@Html.DisplayFor(modelItem => item.av_mensagem)</p>
                </div>
            </div>
            <div class="ui grid">
                <div class="sixteen wide column">
                    <h5>Publicado por @Html.DisplayFor(modelItem => item.professor) em: @Html.DisplayFor(modelItem => item.av_datacadastro)</h5>
                </div>
            </div>
            @Html.HiddenFor(modelItem => item.av_geral)
            <hr class="ihr blue" />
        }
    </div>
</div>
<script type="text/javascript">
    $(function()
    {
        $('<a>', {
            class: 'item dalink',
            href: '@Url.Action("Index", "Content", new { id = ViewBag.IDDisciplina })',
            text: 'Material Didático'
        }).appendTo('.firstmenu:first');

        $('<a>', {
            class: 'item dalink',
            href: '@Url.Action("Index", "Courses", new { id = ViewBag.IDDisciplina })',
            text: 'Avisos'
              }).appendTo('.firstmenu:last');

        $('<a>', {
            class: 'item dalink',
            href: '@Url.Action("Forum", "Courses", new { id = ViewBag.IDDisciplina })',
            text: 'Forum de Discussão'
        }).appendTo('.firstmenu:last');
    });
</script>
